<div
  class="max-w-screen-page mx-auto px-7 pt-7 pb-6 lg:p-2"
  data-aos="fade-up"
  data-aos-duration="2000"
  data-aos-easing="ease-in-out"
>
  <div class="w-full px-4 flex flex-row lg:flex-col relative lg:pt-20">
    <div class="relative shrink-0 h-[75px] w-[75px]  lg:absolute lg:h-36 lg:w-36 lg:top-3 lg:left-28">
      {% if section.settings.image_brand %}
        {{
          section.settings.image_brand
          | image_url: width: 135
          | image_tag: class: 'absolute h-full w-full left-0 right-0 top-0 bottom-0 object-contain', loading: 'lazy'
        }}
      {% else %}
        {{
          'image'
          | placeholder_svg_tag: 'bg-dark-charcoal/75 fill-dark-charcoal block absolute w-full h-full left-0 right-0 top-0 bottom-0'
        }}
      {% endif %}
    </div>
    <div class="p-1 pt-2 text-center lg:w-full grow">
      {% if section.settings.title != blank %}
        <h2 class="text-avocado font-bold font-fredasansstd text-title_movil tracking-normal uppercase mb-4 lg:mb-6">
          {{ section.settings.title }}
        </h2>
      {% endif %}
      {% if section.settings.text_content != blank %}
        <p class="text-xs lg:text-sm font-book font-fredasansstd tracking-normal text-dark-charcoal text-center">
          {{ section.settings.text_content }}
        </p>
      {% endif %}
    </div>
  </div>
  <div class="w-full px-1 pt-3 pb-7 lg:pt-5 lg:pb-11">
    <span class="w-full bg-avocado rounded-full h-0.5 mx-auto block"></span>
  </div>
  <div class="w-full flex items-center flex-wrap justify-center lg:pb-14">
    {%- for block in section.blocks -%}
      {% case block.type %}
        {%- when 'distributor' -%}
          <div
            class="w-1/2 h-20 flex p-1 pb-5 justify-center lg:justify-between items-center lg:w-1/5 lg:pb-1"
            {{ block.shopify_attributes }}
          >
            <div class="w-full h-full relative">
              {% if block.settings.image_brand_distributor %}
                {{
                  block.settings.image_brand_distributor
                  | image_url: width: 160
                  | image_tag:
                    class: 'absolute h-full w-full left-0 right-0 top-0 bottom-0 object-contain',
                    loading: 'lazy'
                }}
              {% else %}
                {{
                  'lifestyle-1'
                  | placeholder_svg_tag: 'bg-dark-charcoal/75 fill-dark-charcoal block absolute w-full h-full left-0 right-0 top-0 bottom-0'
                }}
              {% endif %}
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

{% schema %} 
{
  "name": "Distribuidores",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "max_blocks": 20,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Encabezado",
      "default": "Distribuidores"
    },
    {
      "type": "textarea",
      "id": "text_content",
      "label": "Texto",
      "default": "También aquí puedes encontrar zapatos Mini Burbujas"
    },
    {
      "type": "image_picker",
      "id": "image_brand",
      "label": "Imagen de marca"
    }
  ],
  "blocks": [
    {
      "type": "distributor",
      "name": "Distribuidor",
      "limit": 20,
      "settings": [
        {
          "type": "image_picker",
          "id": "image_brand_distributor",
          "label": "Logo de la marca"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Distribuidores",
      "blocks": [
        {
          "type": "distributor"
        }
      ]
    }
  ]
}
{% endschema %}
