<div
  class="w-full overflow-hidden  lg:my-10"
  data-aos="fade-up"
  data-aos-duration="2000"
  data-aos-easing="ease-in-out"
>
  <div class="max-w-screen-page mx-auto p-8 pb-4 lg:p-2.5">
    <div class="w-full flex items-center flex-wrap justify-center">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'image-with-text' -%}
            <div
              class="w-full h-72 flex flex-col p-1 pb-5 justify-center lg:justify-between items-center lg:w-1/3 lg:pb-1"
              {{ block.shopify_attributes }}
            >
              <div class="w-full h-full relative">
                {% if block.settings.image %}
                  {{
                    block.settings.image
                    | image_url: width: 320
                    | image_tag:
                      class: 'absolute h-full w-full left-0 right-0 top-0 bottom-0 object-contain',
                      loading: 'lazy'
                  }}
                {% else %}
                  {{
                    'product-1'
                    | placeholder_svg_tag: 'bg-dark-charcoal/75 fill-dark-charcoal block absolute w-full h-full left-0 right-0 top-0 bottom-0'
                  }}
                {% endif %}
              </div>
              <span class="pt-0.5 lg:pt-1 font-fredasansstd font-book text-xs text-dark-charcoal tracking-normal text-center"> {{ block.settings.paragraph }}</span>
            </div>
           
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Imágenes múltiples",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "max_blocks": 20,
  "settings": [],
  "blocks": [
    {
      "type": "image-with-text",
      "name": "Imagen con texto",
      "limit": 15,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "richtext",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "<p> Exportamos a otros países </p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Imágenes múltiples",
      "blocks": [
        {
          "type": "image-with-text"
        }
      ]
    }
  ]
}
{% endschema %}
