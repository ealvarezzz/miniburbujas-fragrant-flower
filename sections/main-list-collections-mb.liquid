<div
  class="w-full overflow-hidden"
  data-aos="fade-up"
  data-aos-duration="2000"
  data-aos-easing="ease-in-out"
>
  <div class="max-w-screen-page mx-auto h-full lg:min-h-[36rem] mb-16  pt-10">
    {% if section.settings.title_page != empty %}
      <h1 class="font-bold text-title_movil text-dark-charcoal lg:text-title uppercase tracking-normal text-center font-fredasansstd mb-8">
        {{ section.settings.title_page }}
      </h1>
    {% endif %}

    {% paginate section.settings.collection_list by 9 %}
      {% if section.settings.collection_list.count > 0 %}
        <div class="flex flex-wrap justify-center">
          {% for collection in section.settings.collection_list -%}
            <a class="w-72 inline-block m-2.5 group" href="{{ collection.url }}">
              <div class="rounded-lg overflow-hidden shadow-sm group-hover:shadow-xl transition-shadow relative h-72">
                {%- if collection.featured_image -%}
                  <img
                    class="object-contain aspect-square"
                    srcset="
                      {%- if collection.featured_image.width >= 165 -%}{{ collection.featured_image | image_url: width: 165 }} 165w,{%- endif -%}
                      {%- if collection.featured_image.width >= 330 -%}{{ collection.featured_image | image_url: width: 330 }} 330w,{%- endif -%}
                      {%- if collection.featured_image.width >= 535 -%}{{ collection.featured_image | image_url: width: 535 }} 535w,{%- endif -%}
                      {%- if collection.featured_image.width >= 750 -%}{{ collection.featured_image | image_url: width: 750 }} 750w,{%- endif -%}
                      {%- if collection.featured_image.width >= 1000 -%}{{ collection.featured_image | image_url: width: 1000 }} 1000w,{%- endif -%}
                      {%- if collection.featured_image.width >= 1500 -%}{{ collection.featured_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                      {%- if collection.featured_image.width >= 3000 -%}{{ collection.featured_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                      {{ collection.featured_image | image_url }} {{ collection.featured_image.width }}w
                    "
                    src="{{ collection.featured_image | image_url: width: 1500 }}"
                    sizes="
                      (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px,
                      (min-width: 750px),
                      calc(100vw - 3rem)
                    "
                    alt=""
                    height="{{ collection.featured_image.height }}"
                    width="{{ collection.featured_image.width }}"
                    loading="lazy"
                    class="motion-reduce"
                  >
                {% else %}
                  {{
                    'product-2'
                    | placeholder_svg_tag: 'bg-dark-charcoal/75 fill-dark-charcoal block absolute w-full h-full left-0 right-0 top-0 bottom-0'
                  }}
                {%- endif -%}
              </div>
              <div class="p-4">
                <h3 class="text-dark-charcoal text-sm">{{ collection.title }}</h3>
                <p>{{ collection.description | truncatewords: 31, '...' }}</p>
              </div>
            </a>
          {%- endfor %}
        </div>

        {% render 'pagination', paginate: paginate %}
      {% else %}
        <span class="text-center block font-bold text-title_movil text-dark-charcoal uppercase"
          >Selecione colecciones</span
        >
      {% endif %}
    {% endpaginate %}
  </div>
</div>

{% schema %}
{
  "name": "Catálogo mb",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title_page",
      "label": "Encabezado",
      "default": "Catálogo"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 40
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Catálogo Mb"
    }
  ]
}
{% endschema %}
